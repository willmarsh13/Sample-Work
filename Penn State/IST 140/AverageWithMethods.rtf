import java.util.Scanner;\
public class AverageWithMethods \{\
    //Prompts the user for numbers\
    public static String promptUserNumbers() \{\
        String numbers;\
        Scanner scn = new Scanner(System.in);\
        System.out.println("Enter five to ten numbers all on one line, separated by spaces: ");\
        numbers = scn.nextLine();\
        return numbers;\
    \}\
    //Calculates the average of the individual numbers\
    public static double calcAverage(String numbers) \{\
        String[] values = numbers.split(" ");\
        double total = 0;\
        for (int i = 0; i < values.length; i++) \{\
            total += Integer.parseInt(values[i]); \} //I had to get some help with this part from Google\
        if (values.length == 0)\
            return 0.0;\
        else\
            return (total / values.length);\
    \}\
    //Prints the result\
    public static void printResults(String numbers, double average) \{\
        System.out.printf("\\nThe average of the numbers %s is %.2f\\n", numbers, average); //also had to get some help with the formatting of this part\
    \}\
    //Main method, calls all the other methods above\
    public static void main(String[] args) \{\
        String numbers = promptUserNumbers();\
        double average = calcAverage(numbers);\
        printResults(numbers, average);\
    \}\
\}}